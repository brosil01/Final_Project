<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> | PassNest</title>
  <link rel="icon" type="image/x-icon" href="/images/frutty.png">
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
  <header>
    <nav class="navbar">
      <div class="nav-container">
        <a href="/">
            <div class="logo"></div>
        </a>

            <!-- Desktop Nav -->
        <ul class="nav-desktop">
        <!-- Home -->
        <li><a href="/" class="<%= currentPath === '/' ? 'active' : '' %>">
          <i class="material-icons">home</i> Home</a>
        </li>

        <!-- About -->
        <li><a href="/about" class="<%= currentPath === '/about' ? 'active' : '' %>">
          <i class="material-icons">info</i> About</a>
        </li>

        <!-- Authenticated Routes -->
        <% if (isAuthenticated) { %>
          <li><a href="/passwords/list" class="<%= currentPath === '/passwords/list' ? 'active' : '' %>">
            <i class="material-icons">vpn_key</i> Passwords</a>
          </li>
          <li><a href="/user/profile" class="<%= currentPath === '/user/profile' ? 'active' : '' %>">
            <i class="material-icons">person</i> Profile</a>
          </li>
          <li><a href="/user/settings" class="<%= currentPath === '/user/settings' ? 'active' : '' %>">
            <i class="material-icons">settings</i> Settings</a>
          </li>
          <li><a href="/auth/logout">
            <i class="material-icons">logout</i> Logout</a>
          </li>
        <% } else { %>
          <li><a href="/auth/login" class="<%= currentPath === '/auth/login' ? 'active' : '' %>">
            <i class="material-icons">login</i> Login</a>
          </li>
          <li><a href="/auth/register" class="<%= currentPath === '/auth/register' ? 'active' : '' %>">
            <i class="material-icons">person_add</i> Register</a>
          </li>
        <% } %>

        </ul>

        <!-- Mobile view Nav -->
        <div class="menu-icon" onclick="toggleMenu()">â˜°</div>
        <div class="dropdown-menu" id="dropdownMenu">
          <ul>
            <li><a href="/"><i class="material-icons">home</i> Home</a></li>
            <li><a href="/about"><i class="material-icons">info</i> About</a></li>
            <% if (isAuthenticated) { %>
              <li><a href="/passwords/list"><i class="material-icons">vpn_key</i> Passwords</a></li>
              <li><a href="/user/profile"><i class="material-icons">person</i> Profile</a></li>
              <li><a href="/user/settings"><i class="material-icons">settings</i> Settings</a></li>
              <li><a href="/auth/logout"><i class="material-icons">logout</i> Logout</a></li>
            <% } else { %>
              <li><a href="/auth/login"><i class="material-icons">login</i> Login</a></li>
              <li><a href="/auth/register"><i class="material-icons">person_add</i> Register</a></li>
            <% } %>
          </ul>
        </div>
        
    </nav>
  </header>
  <!-- Drop down Section/Effects: -->
  <script>
    function toggleMenu() {
      const menu = document.getElementById("dropdownMenu");
      menu.style.display = menu.style.display === "block" ? "none" : "block";
    }
  
    document.addEventListener("click", function (event) {
      const menu = document.getElementById("dropdownMenu");
      const icon = document.querySelector(".menu-icon");
      if (!menu.contains(event.target) && !icon.contains(event.target)) {
        menu.style.display = "none";
      }
    });
  </script>
  
  

