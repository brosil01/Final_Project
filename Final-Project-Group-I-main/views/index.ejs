<%- include('./partials/header') %>

<div class="container">
  <div class="welcome-section">
    <h1><%= message %></h1>
    <p>A simple password manager for your pleasure</p>
    
    <% if (isAuthenticated) { %>
      <div class="action-buttons">
        <a href="/user/profile" class="btn primary-btn">View Profile</a>
      </div>
    <% } else { %>
      <div class="action-buttons">
        <a href="/auth/login" class="btn primary-btn">Login</a>
        <a href="/auth/register" class="btn secondary-btn">Register</a>
      </div>
    <% } %>
  </div>
  
  <div class="features-section">
    <h2>Features</h2>
    <div class="feature-grid">
      <div class="feature-card">
        <h3>Password Sharing</h3>
        <p>Share passwords between computers</p>
      </div>
      <div class="feature-card">
        <h3>Password Generator</h3>
        <p>Generate safe amd secure passwords</p>
      </div>
      <div class="feature-card">
        <h3>Adding Friends</h3>
        <p>Share passwords with your friends</p>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>